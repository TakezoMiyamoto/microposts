<% @user ||= current_user %> 
<div class="stats">
    <a href="<%= following_user_path(@user) %>">
        <strong id="following" class="stats">
            <%= @user.following_users.count %>
        </strong>
        following
    </a>
    <a href="<%= followers_user_path(@user) %>">
        <strong id="following" class="stats">
            <%= @user.follower_users.count %>
        </strong>
        followers
    </a>
</div>