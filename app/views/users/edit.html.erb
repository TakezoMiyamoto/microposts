<h1>プロフィール編集</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for current_user do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
        
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :email %>
            <%= f.email_field :email %>
            
            <%= f.label :origin %>
            <%= f.text_field :origin, :placeholder => "Enter your hometown"  %>
            
            <%= f.label :profile %>
            <%= f.text_area :profile, :placeholder => "Enter your profile within 150 charactors" , row: 5 %>
            
            <%= f.submit "Update my profile", class: "btn btn-large btn-primary" %>
        <% end %>
        
        <div class="gravatar_edit">
            <%= gravatar_for current_user %>
            <a href="http://gravatar.com/emails" target="_blank">Change Pic</a>
        </div>
        
        
    </div>
        
</div>